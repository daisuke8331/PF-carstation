<!--投稿一覧画面-->

<div class="container">
  <div class="row">
    <div class="col-10">
      <h1>投稿一覧</h1>
    </div>
    <div class="col-2">
      <%= link_to '投稿する', new_post_path, class:"btn btn-success" %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <table class="table table-striped">
        <tr class="thread-light">
          <th><!--画像--></th>
          <th>投稿者</th>
          <th>タイトル</th>
        </tr>
        <% @posts.each do |posts| %>
          <tr>
            <td></td>
            <td><%= posts.customer.name %></td>
            <td><%= link_to posts.title, post_path(posts.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>