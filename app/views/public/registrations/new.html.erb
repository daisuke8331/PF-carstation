<!--会員の新規登録ページ-->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="mb-5 text-color col-3 text-center"><b>新規会員登録</b></h2>

        <!--%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %-->
        <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>

          <%= render "public/shared/error_messages", resource: resource %>
          <div class="sign_up-pages col-12">
            <div class="field mb-1">
              <%= f.label :name, "氏名", class: 'col-3' %></br>
              <%=f.text_field :name, autofocus: true %>
            </div>

            <div class="field mb-1">
              <%= f.label :name_kana, "氏名(カナ)", class: 'col-3' %></br>
              <%=f.text_field :name_kana, autofocus: true %>
            </div>

            <div class="field mb-1">
              <%= f.label :telephone_number, "電話番号", class: 'col-3' %></br>
              <%=f.text_field :telephone_number, autofocus: true %>
            </div>

            <div class="field mb-1">
              <%= f.label :email, "メールアドレス", class: 'col-3' %></br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field mb-1">
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %></br>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field mb-1">
              <%= f.label :password_confirmation, "パスワード(確認)", class: 'col-3' %></br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="field mb-1">
              <%= f.label :experience_id, "会員ステータス(仮)", class: 'col-3' %></br>
              <%= f.select :experience_id, @experiences.map { |experience| [experience.name, experience.id] },
                      { include_blank: '--選択してください--'} %>
            </div>
</br>
            <div class="actions">
              <%= f.submit "登録", class: 'btn btn-primary col-2' %>
            </div>
            </br>
            <h5><b>既に登録済みの方</b></h5>
            <div class="field mb-1">
              <%= render "public/shared/links" %>
            </div>
          </div>
        <% end %>

    </div>
  </div>
</div>
