<!--会員の新規登録ページ-->
<h2>新規会員登録</h2>

<!--%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %-->
<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>

  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "氏名" %></br>
    <%=f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :name_kana, "氏名(カナ)" %></br>
    <%=f.text_field :name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" %></br>
    <%=f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %></br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %></br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認)" %></br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :experience_id, "会員ステータス(仮)" %></br>
    <%= f.select :experience_id, @experiences.map { |experience| [experience.name, experience.id] },
            { include_blank: '--選択してください--'} %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
