<!--いいねした投稿を一覧表示-->
  <div class = "container">
    <div class = "row">
      <div class = "col-12">
        <h1>いいねした投稿</h1>
        <% @favorite_posts.each do |posts|%>
          <h4>タイトル：<%= posts.title %></h4>
          <div>投稿者：<%= posts.customer.name %></div>
          <div><%= image_tag posts.get_image(600,400) %></div>
          <br>
          <div><%= posts.body %></div>
          <br>
        <% end %>
      </div>
    </div>
  </div>

