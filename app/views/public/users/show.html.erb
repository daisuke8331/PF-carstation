<!--会員情報ページ(利用者側)-->

<div class="container">

  <div class="row">
    <div class="col-lg-12">
      <h3><b>マイページ</b></h3>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-lg-1">
      <b>登録情報</b>
    </div>
    <div class="col-lg-2">
      <% if @customer == current_customer %>
        <p><%= link_to "編集する", edit_user_path, class:"btn btn-success" %></p>
      <% end %>
    </div>
    <div class="col-lg-2">
      <p><%=link_to"お気に入り記事",users_favorites_user_path(@customer), class:"btn btn-success" %></p>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-lg-6">
      <table class="table table-striped">

        <tr>
          <td>氏名</td>
          <td><%= @customer.name%></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= @customer.name_kana%></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td><%= @customer.experience.name %></td>
        </tr>

      </table>
    </div>
  </div>
</div>