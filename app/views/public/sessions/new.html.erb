<!--顧客用ログイン画面-->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <br>
      <h4 class="mb-5 text-color col-3 "><b>ログイン</b></h4>
      
        <h5><b>会員の方はこちらからログイン</b></h5>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field mb-1">
            <%= f.label :email, "メールアドレス", class: 'col-3' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="field mb-1">
            <%= f.label :password, "パスワード", class: 'col-3' %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field mb-1">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログイン情報を保持する" %>
            </div>
          <% end %>
        
          <div class="actions mb-1">
            <%= f.submit "ログイン", class: 'btn btn-primary col-2' %>
          </div>
        <% end %>
      
        <h5><b>会員登録がお済みでない方</b></h5>
        <div class="field mb-1">
          <%= render "public/shared/links" %>
        </div>
    
    </div>
  </div>
</div>
